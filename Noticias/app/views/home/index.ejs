<!DOCTYPE HTML>
<html lang="pt-br">

<head>
	<meta charset="UTF-8">

	<title>Portal de notícias</title>

	<!-- JQuery -->
	<script src="js/jquery-2.2.1.js"></script>

	<!-- bootstrap - link cdn -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"
		integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

	<!-- incluindo css -->
	<link href="css/style.css" rel="stylesheet">

	<!-- favicon -->
	<link rel="shortcut icon" href="images/favicon.ico" />
</head>

<body>

	<nav class="navbar navbar-default navbar-static-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
					aria-expanded="false" aria-controls="navbar">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>

				<a href="/">
					<img src="/images/logo.png" />
				</a>

			</div>

			<div id="navbar" class="navbar-collapse collapse">
				<ul class="nav navbar-nav navbar-right">
					<li><a href="index.html">HOME</a></li>
				</ul>
			</div>
		</div>
	</nav>

	<div class="container">
		<div class="row">
			<div class="col-md-8">
				<% if (Object.keys(newsData).length > 0) { %>
				<div class="noticia_wrapper">
					<span class="noticia_autor"><%= newsData[0].author %></span>
					<a href="/noticia/<%= newsData[0].hash %>" class="noticia_titulo"><%= newsData[0].title %></a>
					<span class="noticia_data"><%= newsData[0].register %></span>
					<br />
					<p class="noticia_resumo">
					</p>
				</div>
				<% } %>
			</div>

			<div class="col-md-4">
				<% if (Object.keys(newsData).length > 1) { %>
				<div class="noticia_wrapper">
					<span class="noticia_autor"><%= newsData[1].author %></span>
					<a href="/noticia/<%= newsData[1].hash %>" class="noticia_titulo"><%= newsData[1].title %></a>
					<span class="noticia_data"><%= newsData[1].register %></span>
					<br />
					<p class="noticia_resumo">
					</p>
				</div>
				<% } %>
			</div>
		</div>

		<div class="row">
			<div class="col-md-4">
				<% if (Object.keys(newsData).length > 2) { %>
				<div class="noticia_wrapper">
					<span class="noticia_autor"><%= newsData[2].author %></span>
					<a href="/noticia/<%= newsData[2].hash %>" class="noticia_titulo"><%= newsData[2].title %></a>
					<span class="noticia_data"><%= newsData[2].register %></span>
					<br />
					<p class="noticia_resumo">
					</p>
				</div>
				<% } %>
			</div>

			<div class="col-md-4">
				<% if (Object.keys(newsData).length > 3) { %>
				<div class="noticia_wrapper">
					<span class="noticia_autor"><%= newsData[3].author %></span>
					<a href="/noticia/<%= newsData[3].hash %>" class="noticia_titulo"><%= newsData[3].title %></a>
					<span class="noticia_data"><%= newsData[3].register %></span>
					<br />
					<p class="noticia_resumo">
					</p>
				</div>
				<% } %>
			</div>

			<div class="col-md-4">
				<% if (Object.keys(newsData).length > 4) { %>
				<div class="noticia_wrapper">
					<span class="noticia_autor"><%= newsData[4].author %></span>
					<a href="/noticia/<%= newsData[4].hash %>" class="noticia_titulo"><%= newsData[4].title %></a>
					<span class="noticia_data"><%= newsData[4].register %></span>
					<br />
					<p class="noticia_resumo">
					</p>
				</div>
				<% } %>
			</div>
		</div>

		<div class="row ver_mais">
			<button type="button" class="btn btn-default"><a href="/noticias">Ver todas as notícias</a></button>
		</div>

	</div>

	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"
		integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS"
		crossorigin="anonymous"></script>

</body>

</html>